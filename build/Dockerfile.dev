# Development Dockerfile with Air for hot reload
FROM golang:1.25-alpine

WORKDIR /app

# Install Air for hot reload
# Use ENV to skip TLS verification for go install if needed
ENV GOPRIVATE=""
RUN --mount=type=cache,target=/go/pkg/mod \
    go install github.com/air-verse/air@latest 2>/dev/null || \
    (echo "Warning: Could not install Air during build. Will use local installation." && exit 0)

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy the entire project
COPY . .

# Create tmp directory for Air
RUN mkdir -p /app/tmp

# Expose ports
EXPOSE 50051 8080

# Run Air for hot reload
CMD ["air", "-c", ".air.toml"]
